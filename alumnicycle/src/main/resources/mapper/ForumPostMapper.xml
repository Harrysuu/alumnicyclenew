<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.elec.alumnicycle.mapper.ForumPostMapper">

    <select id="getForumPostsByUserId" resultType="com.elec.alumnicycle.entity.ForumPost" >
        SELECT
        *
        FROM
        forum_post a
        LEFT JOIN
        create_forum_post b ON b.post_id = a.id
        WHERE
        b.user_id = #{userId}
    </select>

</mapper>
